<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.FoodApp.Custom">

    <TextView
        android:id="@+id/forgot_infoRectangle"
        android:layout_width="350dp"
        android:layout_height="318dp"
        android:background="@drawable/logo_rectangle"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/forgot_Email"
        android:layout_width="296dp"
        android:layout_height="69dp"
        android:layout_marginBottom="84dp"
        android:layout_weight="1"
        android:autofillHints="username"
        android:background="@drawable/pink3_rectangle"

        android:fontFamily="@font/bs_reg"
        android:gravity="center"
        android:hint="@string/enterEmail"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/forgot_infoRectangle"
        app:layout_constraintEnd_toEndOf="@+id/forgot_infoRectangle"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/forgot_infoRectangle"
        tools:ignore="TextContrastCheck" />

    <android.widget.Button
        android:id="@+id/forgot_SubmitButton"
        android:layout_width="189dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/login_button_background"
        android:fontFamily="@font/bs_bold"
        android:gravity="center"
        android:text="@string/submit"

        android:textColor="@color/white"


        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/forgot_infoRectangle"
        app:layout_constraintEnd_toEndOf="@+id/forgot_infoRectangle"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/forgot_infoRectangle"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/forgot_display"
        android:layout_width="285dp"
        android:layout_height="108dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="33dp"
        android:layout_weight="1"
        android:fontFamily="@font/bs_reg"
        android:gravity="center"
        android:text="@string/forgotPassword"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_infoRectangle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/forgot_infoRectangle"
        app:layout_constraintTop_toTopOf="@+id/forgot_infoRectangle" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="116dp"
        android:layout_height="97dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="117dp"
        android:progressTint="#FFFEFE"
        app:layout_constraintEnd_toEndOf="@+id/forgot_infoRectangle"
        app:layout_constraintStart_toStartOf="@+id/forgot_infoRectangle"
        app:layout_constraintTop_toTopOf="@+id/forgot_infoRectangle" />

    <android.widget.Button
        android:id="@+id/forgot_exit"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:layout_marginBottom="256dp"
        android:background="@drawable/x"
        app:layout_constraintBottom_toBottomOf="@+id/forgot_infoRectangle"
        app:layout_constraintEnd_toEndOf="@+id/forgot_infoRectangle"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="@+id/forgot_infoRectangle" />


</androidx.constraintlayout.widget.ConstraintLayout>