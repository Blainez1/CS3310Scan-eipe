<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_2</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_3</item>
        <item name="colorSecondaryVariant">@color/green_3</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorBackgroundFloating">@color/white</item>
    </style>

    <style name="Theme.FoodApp.Custom">
        <item name = "android:windowIsTranslucent">true</item>
        <item name = "android:windowCloseOnTouchOutside">true</item>
        <item name = "android:windowBackground">@color/translucent</item>
    </style>
    <style name="Theme.FoodApp.White">
        <item name = "android:windowIsTranslucent">false</item>
        <item name = "android:windowCloseOnTouchOutside">true</item>
        <item name = "android:windowBackground">@color/white</item>
    </style>
    <style name="Theme.FoodApp.Custom.Transparent">
        <item name = "android:windowIsTranslucent">true</item>
        <item name = "android:windowCloseOnTouchOutside">true</item>
        <item name = "android:windowBackground">#00000000</item>
    </style>
</resources>